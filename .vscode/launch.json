{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "jest-debug",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "smartStep": true,
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "node_modules/.bin/jest",
                "--inspect-brk",
                "--runInBand",
                "${file}"
            ],
            "outputCapture": "std",
            "port": 9229,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
